	private void jMenuItem1ActionPerformed(java.awt.event.ActionEvent evt) {// GEN-FIRST:event_jMenuItem1ActionPerformed
		JFileChooser fileChooser = new JFileChooser("Choose Image");
		fileChooser.addChoosableFileFilter(new ImageFilter());
		int choose = fileChooser.showOpenDialog(this);
		if (choose == javax.swing.JFileChooser.APPROVE_OPTION) {
			File file = fileChooser.getSelectedFile();
			if (file == null)
				return;
			NeptuneFrame NF = new NeptuneFrame(file.getAbsolutePath());
			desktop.add(NF, JLayeredPane.DEFAULT_LAYER);
			NF.setVisible(true);

		}

	}// GEN-LAST:event_jMenuItem1ActionPerformed

