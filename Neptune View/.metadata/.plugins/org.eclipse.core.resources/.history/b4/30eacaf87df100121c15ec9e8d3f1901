    public Player(String path, String mURL) {
        initComponents();
        this.setTitle("Neptune Player");
        this.MP = mURL;
        NativeLibrary.addSearchPath(RuntimeUtil.getLibVlcLibraryName(), path);
        MediaPlayer = new EmbeddedmediaPlayerComponent();
        
    }
    
